name=gcc
from_source=gcc-host
revision=1
hostdeps="binutils"
imagedeps="build-essential"
deps="mlibc-headers"

configure() {
    cp -rp "${source_dir}"/. ./
    mkdir -p build && cd build

        CFLAGS="$HOST_CFLAGS" \
        CXXFLAGS="$HOST_CXXFLAGS" \
        LDFLAGS="$HOST_LDFLAGS" \
        CFLAGS_FOR_TARGET="$TARGET_CFLAGS" \
        CXXFLAGS_FOR_TARGET="$TARGET_CXXFLAGS" \
    ../configure \
        --prefix="${prefix}" \
        --target=${OS_TRIPLET} \
        --with-sysroot="${sysroot_dir}" \
        --target=x86_64-orange --enable-languages=c,c++,go --disable-nls --enable-linker-build-id --enable-default-pie --enable-default-ssp --disable-multilib --enable-initfini-array --enable-shared --enable-host-shared 
}

build() {
    cd build
    make -j${parallelism} all-gcc
}

package() {
    cd build
    DESTDIR="${dest_dir}" make install-gcc

        strip_command=strip \
    post_package_strip
}